{
    "name": "@cel_cash/nestjs",
    "version": "1.1.6",
    "description": "",
    "type": "commonjs",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "lint": "pnpm biome check src --apply",
        "type-check": "tsc --noEmit",
        "build": "tsup",
        "release": "pnpm release-it"
    },
    "keywords": [
        "celcash",
        "client",
        "sdk",
        "api",
        "typescript",
        "nestjs"
    ],
    "files": [
        "dist"
    ],
    "author": "Walaff Fernandes",
    "license": "ISC",
    "homepage": "https://github.com/Pyxlab/celcash/tree/main/packages/nest#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Pyxlab/celcash.git",
        "directory": "packages/nestjs"
    },
    "bugs": {
        "url": "https://github.com/Pyxlab/celcash/issues"
    },
    "peerDependencies": {
        "@nestjs/common": "^8.0.0 || ^9.0.0 || ^10.0.0",
        "reflect-metadata": "^0.1.12",
        "rxjs": "^6.0.0 || ^7.0.0",
        "@cel_cash/core": "1.1.6"
    },
    "devDependencies": {
        "@cel_cash/core": "workspace:*",
        "@nestjs/common": "^10.2.8",
        "@swc/core": "^1.5.7",
        "@types/cache-manager": "^4.0.1",
        "@types/node": "^16.11.5",
        "tsup": "^8.0.2",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "@nestjs/cache-manager": "^2.2.1",
        "@ts-rest/core": "^3.45.2",
        "zod": "^3.23.8"
    },
    "release-it": {
        "git": false,
        "plugins": {
            "@release-it/bumper": {
                "out": {
                    "file": "package.json",
                    "path": [
                        "peerDependencies.@cel_cash/core"
                    ]
                }
            }
        },
        "hooks": {
            "before:init": [
                "pnpm lint",
                "pnpm type-check"
            ],
            "after:bump": "npm run build",
            "after:git:release": "echo After git push, before github release"
        }
    }
}
