{
    "name": "@cel_cash/adonisjs",
    "description": "AdonisJS provider for CelCash",
    "version": "2.2.0",
    "engines": {
        "node": ">=20.6.0"
    },
    "type": "module",
    "files": [
        "build/src",
        "build/providers",
        "build/services",
        "build/stubs",
        "build/configure.js",
        "build/configure.d.ts",
        "build/index.d.ts",
        "build/index.js"
    ],
    "exports": {
        ".": "./build/index.js",
        "./types": "./build/src/types.js",
        "./cel_cash_provider": "./build/providers/cel_cash_provider.js",
        "./services/main": "./build/services/main.js"
    },
    "scripts": {
        "clean": "del-cli build",
        "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
        "type-check": "tsc --noEmit",
        "lint": "eslint . --ext=.ts",
        "format": "prettier --write .",
        "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
        "pretest": "npm run lint",
        "test": "c8 npm run quick:test",
        "prebuild": "npm run lint && npm run clean",
        "build": "tsc",
        "postbuild": "npm run copy:templates",
        "release": "release-it",
        "version": "npm run build",
        "prepublishOnly": "npm run build"
    },
    "devDependencies": {
        "@adonisjs/assembler": "^7.2.3",
        "@adonisjs/core": "^6.3.1",
        "@adonisjs/eslint-config": "^1.3.0",
        "@adonisjs/prettier-config": "^1.3.0",
        "@adonisjs/tsconfig": "^1.3.0",
        "@cel_cash/core": "workspace:*",
        "@japa/assert": "^2.1.0",
        "@japa/runner": "^3.1.1",
        "@swc/core": "^1.4.6",
        "@types/node": "^20.11.25",
        "c8": "^9.1.0",
        "copyfiles": "^2.4.1",
        "del-cli": "^5.1.0",
        "eslint": "^8.57.0",
        "prettier": "^3.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.2"
    },
    "dependencies": {
        "@ts-rest/core": "^3.45.2",
        "zod": "^3.23.8"
    },
    "peerDependencies": {
        "@adonisjs/core": "^6.2.0",
        "@adonisjs/redis": "^8.0.1",
        "@cel_cash/core": "^2.2.0"
    },
    "author": "Walaff Fernandes",
    "license": "MIT",
    "homepage": "https://github.com/Pyxlab/celcash/tree/main/packages/adonis#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Pyxlab/celcash.git",
        "directory": "packages/adonis"
    },
    "bugs": {
        "url": "https://github.com/Pyxlab/celcash/issues"
    },
    "keywords": [
        "adonisjs",
        "celcash",
        "client",
        "sdk",
        "api",
        "typescript"
    ],
    "publishConfig": {
        "access": "public",
        "tag": "latest"
    },
    "c8": {
        "reporter": [
            "text",
            "html"
        ],
        "exclude": [
            "tests/**"
        ]
    },
    "release-it": {
        "git": false,
        "plugins": {
            "@release-it/bumper": {
                "out": {
                    "file": "package.json",
                    "versionPrefix": "^",
                    "path": [
                        "peerDependencies.@cel_cash/core"
                    ]
                }
            }
        },
        "hooks": {
            "before:init": [
                "pnpm lint",
                "pnpm type-check"
            ],
            "after:bump": [
                "pnpm prebuild",
                "pnpm build",
                "pnpm postbuild"
            ],
            "after:git:release": "echo After git push, before github release"
        }
    }
}